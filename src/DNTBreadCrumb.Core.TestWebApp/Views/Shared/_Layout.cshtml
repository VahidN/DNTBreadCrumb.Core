<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" asp-append-version="true"/>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <breadcrumb asp-homepage-title="Home"
                        asp-homepage-url="@Url.Action("Index", "Home", new { area = "" })"
                        asp-bootstrap-version="V5"
                        asp-homepage-glyphicon="glyphicon glyphicon-home">
            </breadcrumb>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <partial name="_SideBarMenu"/>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@RenderSection("Scripts", false)
</body>
</html>